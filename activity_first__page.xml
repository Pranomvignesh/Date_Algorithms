<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pranomvignesh.clockscalendars.First_Page">

    <Button
        android:id="@+id/Clocks_Button"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="146dp"
        android:background="@color/colorPrimary"
        android:text="@string/First_Page_Clocks_Button"
        android:textColor="@android:color/background_light"
        android:textColorLink="@color/colorPrimary"
        android:textSize="25sp"
        tools:ignore="UnknownId"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/Calendar_Button"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_below="@+id/Clocks_Button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:background="@color/colorPrimary"
        android:text="@string/First_Page_Calendar_button"
        android:textColor="@android:color/background_light"
        android:textColorLink="@color/colorPrimary"
        android:textSize="25sp" />
</RelativeLayout>
