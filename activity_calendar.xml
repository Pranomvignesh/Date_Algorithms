<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pranomvignesh.clockscalendars.Calendar">


    <TextView
        android:id="@+id/Output_Day"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:hint="@string/Calendar_Page_output_date"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:text="@string/Calendar_Page_Display_text"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:layout_alignTop="@+id/Output_Day"
        android:layout_toLeftOf="@+id/Output_Day"
        android:layout_toStartOf="@+id/Output_Day"
        tools:ignore="RelativeOverlap" />

    <Button
        android:id="@+id/Find_button"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:text="@string/Calendar_page_Button"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp" />

    <EditText
        android:id="@+id/Date_input"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/Month_input"
        android:layout_alignTop="@+id/Month_input"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:ems="10"
        android:gravity="bottom|center_horizontal"
        android:hint="@string/Calendars_Page_Date"
        android:inputType="number"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        tools:ignore="TextFields,UnknownId" />

    <EditText
        android:id="@+id/Month_input"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/Year_input"
        android:layout_alignTop="@+id/Year_input"
        android:layout_toLeftOf="@+id/Year_input"
        android:layout_toStartOf="@+id/Year_input"
        android:ems="10"
        android:gravity="bottom|center_horizontal"
        android:hint="@string/mm"
        android:inputType="number"
        android:textColorLink="@android:color/background_dark"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/Year_input"
        android:layout_width="105dp"
        android:layout_height="75dp"
        android:layout_alignEnd="@+id/Output_Day"
        android:layout_alignRight="@+id/Output_Day"
        android:layout_centerVertical="true"
        android:ems="10"
        android:gravity="bottom|center_horizontal"
        android:hint="@string/yyyy"
        android:inputType="number"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@+id/Date_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/enter_date"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        tools:text="Enter Date" />
</RelativeLayout>
