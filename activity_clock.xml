<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pranomvignesh.clockscalendars.ClockActivity">

    <EditText
        android:id="@+id/HourInput"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/Find_angle"
        android:layout_alignStart="@+id/Find_angle"
        android:layout_below="@+id/Angle_output"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/hour"
        android:inputType="number"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/MinuteInput"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/HourInput"
        android:layout_alignTop="@+id/HourInput"
        android:layout_toEndOf="@+id/HourInput"
        android:layout_toRightOf="@+id/HourInput"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/minute"
        android:inputType="number"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/Angle_output"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:gravity="center"
        android:hint="@string/angle"
        android:textColor="@color/colorAccent"
        android:textSize="30sp" />

    <Button
        android:id="@+id/Find_angle"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_below="@+id/HourInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:background="?attr/colorPrimary"
        android:text="@string/find_angle"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="24sp" />
</RelativeLayout>
